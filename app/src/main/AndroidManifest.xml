<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fintrainer.fintrainer">

    <application
        android:name="com.fintrainer.fintrainer.views.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.fintrainer.fintrainer.views.drawer.DrawerActivity"
            android:theme="@style/DrawerTheme" />
        <activity
            android:name="com.fintrainer.fintrainer.views.splash.Splash"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fintrainer.fintrainer.views.testing.TestingActivity" />
        <activity android:name="com.fintrainer.fintrainer.views.result.ResultActivity" />
        <activity android:name="com.fintrainer.fintrainer.views.chapters.ChaptersActivity" />
        <activity android:name="com.fintrainer.fintrainer.views.search.SearchActivity" />
        <activity
            android:name="com.fintrainer.fintrainer.views.discussions.DiscussionsActivity"
            android:windowSoftInputMode="adjustResize">

        </activity>
    </application>

</manifest>