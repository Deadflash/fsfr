<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fintrainer.fintrainer">

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".views.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.drawer.DrawerActivity"
            android:theme="@style/DrawerTheme" />
        <activity
            android:name=".views.splash.Splash"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.testing.TestingActivity" />
        <activity android:name=".views.result.ResultActivity" />
        <activity android:name=".views.chapters.ChaptersActivity" />
        <activity android:name=".views.search.SearchActivity" />
        <activity
            android:name=".views.discussions.DiscussionsActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".views.settings.Settings" />
    </application>

</manifest>