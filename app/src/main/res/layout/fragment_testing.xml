<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_50"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQuestionCode"
                fontPath="fonts/RobotoLight.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="1.1.1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="БОЛЬШОЙ И ДЛИННЫЙ текст БОЛЬШОЙ И ДЛИННЫЙ текст БОЛЬШОЙ И ДЛИННЫЙ текст БОЛЬШОЙ И ДЛИННЫЙ текст БОЛЬШОЙ И ДЛИННЫЙ текст БОЛЬШОЙ И ДЛИННЫЙ текстБОЛЬШОЙ И ДЛИННЫЙ текстБОЛЬШОЙ И ДЛИННЫЙ текстБОЛЬШОЙ И ДЛИННЫЙ текстБОЛЬШОЙ И ДЛИННЫЙ текст БОЛЬШОЙ И ДЛИННЫЙ текстБОЛЬШОЙ И ДЛИННЫЙ текст БОЛЬШОЙ И ДЛИННЫЙ текстБОЛЬШОЙ И ДЛИННЫЙ текст"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ivTestingImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@color/blue_grey_300" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>